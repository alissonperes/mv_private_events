<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @user.events.count > 0 %>
<ul>
  <strong>Created events by <%= @user.name %></strong>
  <%= render @events %>
</ul>
<% end %>

<% if @user.attended_events.count > 0 %>
<ul>
  <strong>Attended events</strong><br>
  <strong>Upcoming events</strong>
  <% @upcoming.each do |x| %>
    <% if x.scheduled > Time.now %>
      <li>
        <%= link_to x.description, x %>
      </li>
    <% end %>
  <% end %>
  <br><strong>Previously attended events</strong>
  <% @previous.each do |x| %>
    <% if x.scheduled < Time.now %>
      <li>
        <%= link_to x.description, x %>
      </li>
    <% end %>
  <% end %>
</ul>
<% end %>
