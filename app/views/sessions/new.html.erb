<% if @user && @user.errors.any? %>
  The form contains <%= pluralize(object.errors.count, "error") %>.
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>


  <%= f.submit "Log in", class: "btn btn-primary" %>
<% end %>
